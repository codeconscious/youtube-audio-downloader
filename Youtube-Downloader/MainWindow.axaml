<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" SizeToContent="3"
        x:Class="Youtube_Downloader.MainWindow"
        Title="YouTube Downloader">
    <StackPanel Orientation="Horizontal" Spacing="5" Height="30" Margin="20">
        <TextBlock Margin="4" Text="https://www.youtube.com/v/"></TextBlock>
        <TextBox Watermark="Enter URL part" Width="150" x:Name="Url"></TextBox>
        <Button Width="130" Foreground="White" Background="Black" Click="OnButtonClick" HorizontalContentAlignment="Center">Download</Button>
    </StackPanel>
</Window>
